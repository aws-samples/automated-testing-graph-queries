{
  "compilerOptions": {
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "es2019",
    "module": "CommonJS",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
